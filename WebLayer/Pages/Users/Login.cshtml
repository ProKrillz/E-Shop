@page
@model WebLayer.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <form class="col s12" method="post">
        <h2>Login</h2>
        <div class="row">
            <div class="input-field col s12">
                <input id="email" type="email" class="validate" asp-for="User.Email">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" type="password" class="validate" asp-for="User.Password">
                <label for="password">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" asp-page-handler="Login">Login</button>
        <a class="waves-effect waves-light btn view" onclick="$('#modal1').modal('open');">Opret</a>
    </form>
    <div id="modal1" class="modal">
        <div class="modal-content">
            <div class="row">
                <h4 class="col">Opret bruger</h4>
                <a href="#!" class="modal-close waves-effect waves-green btn-flat right col">Luk</a>
            </div>
            <form class="col s12" method="post">
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="icon_prefix" type="text" class="validate" asp-for="User.FirstName">
                        <label for="icon_prefix">Fornavn</label>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix"></i>
                        <input id="icon_lastname" type="tel" class="validate" asp-for="User.Lastname">
                        <label for="icon_lastname">Efternavn</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">home</i>
                        <input id="icon_add" type="text" class="validate" asp-for="User.Address">
                        <label for="icon_add">Addresse</label>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix"></i>
                        <input id="icon_zip" type="tel" class="validate" asp-for="User.Fk_ZipCodeId">
                        <label for="icon_zip">Postnummer</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        <input id="icon_email" type="email" class="validate" asp-for="User.Email">
                        <label for="icon_email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">lock</i>
                        <input id="icon_pass1" type="password" class="validate" asp-for="User.Password">
                        <label for="icon_pass1">Password</label>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix"></i>
                        <input id="icon_pass2" type="password" class="validate" asp-for="PasswordCompared">
                        <label for="icon_pass2">Gentag password</label>
                    </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action" asp-page-handler="Create">
                    Opret
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#modal1').modal();
    });
</script>